<mjml>
   <mj-head>
      <mj-font name="Lato" href="https://fonts.googleapis.com/css?family=Lato:400,700" />
      <mj-style inline="inline">
        {{{ stylesheet }}}
      </mj-style>
      <mj-attributes>
        <mj-all font-family="Lato, Helvetica, Arial, sans-serif"></mj-all>
      </mj-attributes>
   </mj-head>
  <mj-body background-color="#f5f6f7">
    <mj-section padding-top="0" padding-bottom="0">
      <mj-column>
        {{#block 'topLogo'}}{{/block}}
      </mj-column>
    </mj-section>

    <!-- white sheet -->
    <mj-wrapper background-color="white" border='1px solid #d6d6d8' border-top="none">
      <!-- header -->
      <mj-section padding-bottom="0" padding-top="0">
        <mj-column>
          <mj-table width="100%" css-class="header__title" cellpadding='4px'>
            <tr>
              <td width="30px">
                <a href="{{#block 'appURL'}}{{/block}}">
                  <img align="left" width="30px" src="{{#block 'logoUrl'}}{{/block}}" alt="{{#block 'appName'}}{{/block}}" />
                </a>
              </td>
              <td>
                <h1 style="line-height: 32px"><a href="{{#block 'appURL'}}{{/block}}">{{#block 'appName'}}{{/block}}</a></h1>
              </td>
            </tr>
          </mj-table>
        </mj-column>
        <mj-column css-class="emailHeader">
          <mj-text padding-top="0" padding-bottom="0">
            {{#block 'emailHeader' }}
              <div class="header__desc__title txtRight">
                {{#block 'emailTitle' }}{{/block}}
              </div>
              <div class="header__desc__subtitle txtRight">
                {{#block 'emailSubtitle' }}{{/block}}
              </div>
            {{/block}}
          </mj-text>
        </mj-column>
      </mj-section>

      <mj-section css-class='before-content' padding-top="8px" padding-bottom="8px">
        <mj-column>
          <mj-divider border-width="1px" border-color="#95999d" />
        </mj-column>
      </mj-section>


      <!-- content -->
      {{#block 'content' }}{{/block}}
    </mj-wrapper>

    <!-- footer -->
    <mj-section padding-top="0">
      <mj-column>
        {{#block 'footerLeft' }}{{/block}}
      </mj-column>
      <mj-column>
        <mj-text align='right' css-class="footer__help">
          {{#block 'footerHelp'}}{{/block}}
        </mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>



