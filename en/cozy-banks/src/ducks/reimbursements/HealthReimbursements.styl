@require 'settings/breakpoints'

.HealthReimbursements__figure
    display inline-block

.HealthReimbursements__transactionsList
    +medium-screen('min')
        border-top: 1px solid var(--silver)

.HealthReimbursements__title
    font-size 18px
    line-height 56px
    border-bottom 1px solid var(--silver)

    +small-screen()
        font-size 16px

.Caption
    font-size 14px
    line-height 1.7
    color var(--coolGrey)
