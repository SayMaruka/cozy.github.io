@require 'settings/breakpoints'

.Separated > * + *
    border-top 1px solid var(--silver)

.TransactionModalRowIcon-reversed
    transform rotate(180deg)

.TransactionLabel
    font-weight bold
    line-height 1.5
    color var(--primaryTextColor)

.TransactionInfo
    line-height 1.7
    font-size 14px
    color var(--primaryTextColor)

.TransactionInfoLabel
    display inline-block
    margin-right 8px
    color var(--coolGrey)
