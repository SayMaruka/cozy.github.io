@require 'tools/mixins.styl'
@require 'settings/breakpoints'

.AccountSwitch__Select
    display inline-flex
    overflow hidden
    cursor pointer
    align-items center

    +small-screen()
        max-width 100%

.AccountSwitch__SelectText
    margin-bottom 0

    &.disable
        opacity .64

.AccountSwitch--small .AccountSwitch__SelectText
    font-size 1.125rem

.DownArrow
    margin-left 0.5rem
    color var(--black)

.DownArrowColor_inverted
    color var(--primaryContrastTextColor)

.AccountSwitch--small .DownArrow
    margin-left 0.375rem
