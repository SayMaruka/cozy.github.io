.GroupPanelSummary__content
    display flex
    flex 1
    align-items center

.GroupPanelSummary__labelBalanceWrapper
    position relative
    display flex
    height 100%
    flex 1
    justify-content space-between
    align-items center

.GroupPanelSummary__figureCurrency
    color inherit

.GroupPanelSummary__caption
    text-transform none
    font-weight normal
    margin-top 0.125rem

.GroupPanelSummary__icon
    color var(--charcoalGrey)

.GroupPanelSummary--unchecked
    .GroupPanelSummary__content,
    .GroupPanelSummary__icon
        color var(--coolGrey)

.GroupPanelSummary--lateHealthReimbursements
        background var(--chablis)
