types = {
    p: padding,
    m: margin
}

sizes = {
    '0': 0,
    half: 0.5rem,
    '1': 1rem,
    '1-half': 1.5rem,
    '2': 2rem,
    '2-half': 2.5rem,
    '3': 3rem
}

directions = {
    t: top,
    b: bottom,
    l: left,
    r: right
}

:global // @stylint ignore
    for kType, vType in types
        for kSize, vSize in sizes
            // all
            .u-{kType}-{kSize}
                {vType}: vSize !important // @stylint ignore
            // horizontal
            .u-{kType}h-{kSize}
                {vType}-left: vSize !important // @stylint ignore
                {vType}-right: vSize !important // @stylint ignore
            // vertical
            .u-{kType}v-{kSize} // @stylint ignore
                {vType}-top: vSize !important // @stylint ignore
                {vType}-bottom: vSize !important // @stylint ignore
            // each direction
            for kDir, vDir in directions
                .u-{kType}{kDir}-{kSize}
                    {vType}-{vDir}: vSize  !important // @stylint ignore

