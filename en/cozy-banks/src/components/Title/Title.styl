@require 'settings/breakpoints'

.Title
    line-height 2.5rem
    margin 0 auto
    margin-bottom .5rem
    display flex

.TitleColor_default
    color var(--black) !important

.TitleColor_primary
    color var(--primaryContrastTextColor) !important

+small-screen()
    .Title
        font-size 1.125rem
        line-height 1.5rem
        margin-bottom 0
